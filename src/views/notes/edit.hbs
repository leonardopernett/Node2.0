<div class="row">
    <div class="col-md-5 mx-auto mt-5">
        <div class="card">
            <h3>edit new Notes</h3>
           
            <div class="card-body">
                <form action="/notes/update/{{note._id}}?_method=PUT" method="post">
                    <div class="form-group">
                        <input type="hidden" name="_id" value="{{note._id}}" >
                        <input type="text" value="{{note.title}}" name="title" placeholder="title" class="form-control" id="">
                    </div>
                    <div class="form-group">
                       <textarea name="description"  placeholder="description" class="form-control" rows="3">{{note.description}}
                       </textarea>
                    </div>
                    <button class="btn btn-dark btn-block">update notes</button>
                </form>
            </div>
        </div>
    </div>
</div>